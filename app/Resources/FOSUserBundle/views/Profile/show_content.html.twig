{% trans_default_domain 'FOSUserBundle' %}

<div class="row">
    <div class="span3">
        {% include 'UtilisateursBundle:Default:modulesUsed/utilisateursConnecte.html.twig' %}
    </div>

    <div class="span9">
        <h2>Mes informations</h2>
        <div id="collapseOne" class="accordion-body collapse in">
            <div class="accordion-inner">
                <div class="span6">
                    <p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
                    <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
                    <p>{{ 'Adresse'|trans }}: {{ user.adresse }}</p>
                    <p>{{ 'Téléphone'|trans }}: {{ user.telephone }}</p>
                    <p>{{ 'Description'|trans }}: {{ user.description }}</p>
                    <p>{{ 'Année expérience evant embauche'|trans }}: {{ user.anneeExpAvtEmb }}</p>
                    <p>{{ 'Nombre client d\'année precidente'|trans }}: {{ user.nbrCltAnneePrec }}</p>
                    <p>{{ 'Profil'|trans }}: {{ user.profil }}</p>
                    <p>{{ 'Login'|trans }}: {{ user.nom }}</p>
                </div>
            </div>
        </div>
    </div>
</div>

