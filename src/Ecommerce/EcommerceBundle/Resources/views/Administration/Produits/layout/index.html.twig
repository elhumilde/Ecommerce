{% extends '::layout/layoutAdmin.html.twig' %}

{% block body -%}
    <h1>Liste des produits</h1>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Code </th>
            <th>Nom</th>
            <th>Prix</th>
            <th>Description</th>
            <th>Categorie</th>


            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in produits %}
            <tr>
                <td>{{ entity.codeprod }}</td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.prix }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.categorie.nomcategorie }}</td>
                <td>
                    <a href="{{ path('adminProduits_show', { 'id': entity.id }) }}"><i class="icon-book"></i></a>
                    <a href="{{ path('adminProduits_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(produits) }}
    </div>

    <ul>
        <li>
            <a href="{{ path('adminProduits_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}