{% extends '::layout/layoutAdmin.html.twig' %}

{% block body -%}
    <h1>Liste des Clients</h1>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Titre</th>
            <th>contenu</th>
            <th>Contenu Experience</th>


        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.titre }}</td>
                <td>{{ entity.contenu|raw }}</td>
                <td>{{ entity.experience|date("m/d/Y") }}</td>
                <td>{{ entity.experiececontenu|raw }}</td>
                <td>
                    <a href="{{ path('adminTelecontact_show', { 'id': entity.id }) }}"><i class="icon-book"></i></a>
                    <a href="{{ path('adminTelecontact_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <ul>
        <li>
            <a href="{{ path('adminTelecontact_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>{# #}

{% endblock %}