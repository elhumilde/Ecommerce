{% extends '::layout/layoutAdmin.html.twig' %}

{% block body -%}
    <h1>Liste des Clients</h1>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Profil</th>
            <th>Description1</th>
            <th>Description2</th>
            <th>Description3</th>
            <th>Experience	</th>

        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.profil }}</td>
                <td>{{ entity.description1 }}</td>
                <td>{{ entity.description2 }}</td>
                <td>{{ entity.description3 }}</td>
                <td>{{ entity.experience|date("m/d/Y") }}</td>
                <td>
                    <a href="{{ path('adminTelecontact_show', { 'id': entity.id }) }}"><i class="icon-book"></i></a>
                    <a href="{{ path('adminTelecontact_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {# <ul>
        <li>
            <a href="{{ path('adminTelecontact_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>#}

{% endblock %}