{% extends '::layout/layoutAdmin.html.twig' %}

{% block body -%}
    <h1>Liste des Photos</h1>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Nom Commercial</th>
            <th>image Clients</th>

        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.utilisateurs.username }}</td>
                <td><img src="{{ asset('uploads/' ~ entity.image.Path) }}" alt="{{ entity.image.name }}" width="300" height="150"></td>

            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('adminPhotoClient_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}