{% extends '::layout/layoutAdmin.html.twig' %}

{% block body -%}
    <h1>Liste des Clients</h1>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Raison</th>
            <th>Adresse</th>
            <th>Ville</th>
            <th>Telephone</th>
            <th>Fax</th>
            <th>Email</th>
            <th>Nom du dirigeant</th>
            <th>Nom Commercial</th>
            <th>image Clients</th>

        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.raison }}</td>
                <td>{{ entity.adresse }}</td>
                <td>{{ entity.ville }}</td>
                <td>{{ entity.telephone }}</td>
                <td>{{ entity.fax }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.nomdirigeant }}</td>
                <td>{{ entity.utilisateurs.username }}</td>
                <td><img src="{{ asset('uploads/' ~ entity.image.Path) }}"  width="80" height="80"></td>
                <td>
                    <a href="{{ path('adminClient_show', { 'id': entity.id }) }}"><i class="icon-book"></i></a>
                    <a href="{{ path('adminClient_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('adminClient_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}