{% extends '::layout/layoutAdmin.html.twig' %}

{% block body -%}
    <h1>Liste des Clients</h1>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Raison</th>
            <th>Adresse</th>
            <th>Telephone</th>

        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.raison }}</td>
                <td>{{ entity.adresse }}</td>
                <td>{{ entity.telephone }}</td>

            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('adminClient_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}